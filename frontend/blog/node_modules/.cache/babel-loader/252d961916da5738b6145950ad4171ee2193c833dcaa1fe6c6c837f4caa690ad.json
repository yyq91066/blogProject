{"ast":null,"code":"import axios from 'axios';\nexport default {\n  name: 'App',\n  data() {\n    return {\n      showCreateForm: false,\n      loading: true,\n      posts: [],\n      newPost: {\n        title: '',\n        content: '',\n        author: ''\n      }\n    };\n  },\n  mounted() {\n    this.loadPosts();\n  },\n  methods: {\n    async loadPosts() {\n      try {\n        const response = await axios.get('/api/posts');\n        this.posts = response.data;\n        this.loading = false;\n      } catch (error) {\n        console.error('加载文章失败:', error);\n        this.loading = false;\n      }\n    },\n    async createPost() {\n      try {\n        // 验证输入\n        if (!this.newPost.title.trim()) {\n          alert('请输入文章标题');\n          return;\n        }\n        if (!this.newPost.author.trim()) {\n          alert('请输入作者姓名');\n          return;\n        }\n        if (!this.newPost.content.trim()) {\n          alert('请输入文章内容');\n          return;\n        }\n        await axios.post('/api/posts', this.newPost);\n        // 重置表单\n        this.newPost = {\n          title: '',\n          content: '',\n          author: ''\n        };\n        this.showCreateForm = false;\n        // 重新加载文章列表\n        this.loadPosts();\n\n        // 显示成功消息\n        alert('文章发布成功！');\n      } catch (error) {\n        console.error('发布文章失败:', error);\n        alert('发布文章失败，请重试');\n      }\n    },\n    formatDate(dateString) {\n      const date = new Date(dateString);\n      return date.toLocaleDateString('zh-CN') + ' ' + date.toLocaleTimeString('zh-CN', {\n        hour12: false,\n        hour: '2-digit',\n        minute: '2-digit'\n      });\n    },\n    truncateContent(content, maxLength) {\n      if (!content) return '';\n      if (content.length <= maxLength) return content;\n      return content.substring(0, maxLength) + '...';\n    },\n    viewFullPost(post) {\n      // 显示完整文章的模态框或新页面\n      const fullContent = `文章标题: ${post.title}\n作者: ${post.author}\n发布时间: ${this.formatDate(post.createdTime)}\n\n${post.content}`;\n      alert(fullContent);\n    }\n  }\n};","map":{"version":3,"names":["axios","name","data","showCreateForm","loading","posts","newPost","title","content","author","mounted","loadPosts","methods","response","get","error","console","createPost","trim","alert","post","formatDate","dateString","date","Date","toLocaleDateString","toLocaleTimeString","hour12","hour","minute","truncateContent","maxLength","length","substring","viewFullPost","fullContent","createdTime"],"sources":["D:\\developData\\testCode\\YYQ-1126\\frontend\\blog\\src\\App.vue"],"sourcesContent":["<template>\n  <div id=\"app\">\n    <!-- 简洁的头部 -->\n    <header class=\"blog-header py-3 border-bottom\">\n      <div class=\"container\">\n        <div class=\"row align-items-center\">\n          <div class=\"col-md-6\">\n            <h1 class=\"h3 mb-0\">我的个人博客</h1>\n          </div>\n          <div class=\"col-md-6 text-md-end\">\n            <button class=\"btn btn-primary btn-sm\" @click=\"showCreateForm = !showCreateForm\">\n              {{ showCreateForm ? '取消' : '写文章' }}\n            </button>\n          </div>\n        </div>\n      </div>\n    </header>\n\n    <main class=\"container my-4\">\n      <!-- 发布文章表单 -->\n      <div v-if=\"showCreateForm\" class=\"card mb-4 shadow-sm\">\n        <div class=\"card-header\">\n          <h5 class=\"mb-0\">发布新文章</h5>\n        </div>\n        <div class=\"card-body\">\n          <form @submit.prevent=\"createPost\">\n            <div class=\"mb-3\">\n              <label for=\"title\" class=\"form-label\">标题</label>\n              <input type=\"text\" class=\"form-control\" id=\"title\" v-model=\"newPost.title\" placeholder=\"请输入文章标题\" required>\n            </div>\n            <div class=\"mb-3\">\n              <label for=\"author\" class=\"form-label\">作者</label>\n              <input type=\"text\" class=\"form-control\" id=\"author\" v-model=\"newPost.author\" placeholder=\"请输入您的名字\" required>\n            </div>\n            <div class=\"mb-3\">\n              <label for=\"content\" class=\"form-label\">内容</label>\n              <textarea class=\"form-control\" id=\"content\" rows=\"5\" v-model=\"newPost.content\" placeholder=\"请输入文章内容\" required></textarea>\n            </div>\n            <div class=\"d-flex justify-content-between\">\n              <button type=\"button\" class=\"btn btn-secondary btn-sm\" @click=\"showCreateForm = false\">取消</button>\n              <button type=\"submit\" class=\"btn btn-primary btn-sm\">发布文章</button>\n            </div>\n          </form>\n        </div>\n      </div>\n\n      <!-- 文章列表 -->\n      <div class=\"row\">\n        <div class=\"col-md-8\">\n          <div v-if=\"loading\" class=\"text-center py-5\">\n            <div class=\"spinner-border text-primary\" role=\"status\">\n              <span class=\"visually-hidden\">加载中...</span>\n            </div>\n            <p class=\"mt-2 text-muted mb-0\">正在加载文章...</p>\n          </div>\n          \n          <div v-else>\n            <div v-if=\"posts.length === 0\" class=\"alert alert-info mb-4\">\n              暂无文章，快来发表第一篇文章吧！\n            </div>\n            \n            <article v-for=\"post in posts\" :key=\"post.id\" class=\"card mb-4 shadow-sm\">\n              <div class=\"card-body\">\n                <h2 class=\"card-title h4 mb-3\">{{ post.title }}</h2>\n                <div class=\"d-flex justify-content-between text-muted small mb-3\">\n                  <span>{{ post.author }}</span>\n                  <span>{{ formatDate(post.createdTime) }}</span>\n                </div>\n                <p class=\"card-text mb-3\">{{ truncateContent(post.content, 200) }}</p>\n                <div class=\"text-end\">\n                  <button class=\"btn btn-outline-primary btn-sm\" @click=\"viewFullPost(post)\">\n                    阅读全文\n                  </button>\n                </div>\n              </div>\n            </article>\n          </div>\n        </div>\n        \n        <!-- 侧边栏 -->\n        <div class=\"col-md-4\">\n          <div class=\"card mb-4 shadow-sm\">\n            <div class=\"card-header\">\n              <h5 class=\"mb-0\">关于博客</h5>\n            </div>\n            <div class=\"card-body\">\n              <p class=\"mb-2\">欢迎来到我的个人博客！</p>\n              <p class=\"small text-muted\">访客可以直接发表文章，无需注册登录。</p>\n            </div>\n          </div>\n          \n          <!-- 统计卡片 -->\n          <div class=\"card shadow-sm\">\n            <div class=\"card-header\">\n              <h5 class=\"mb-0\">博客统计</h5>\n            </div>\n            <div class=\"card-body\">\n              <div class=\"row text-center\">\n                <div class=\"col-6 border-end\">\n                  <div class=\"h5 mb-0\">{{ posts.length }}</div>\n                  <p class=\"small text-muted mb-0\">文章数</p>\n                </div>\n                <div class=\"col-6\">\n                  <div class=\"h5 mb-0\">∞</div>\n                  <p class=\"small text-muted mb-0\">访客数</p>\n                </div>\n              </div>\n            </div>\n          </div>\n        </div>\n      </div>\n    </main>\n\n    <footer class=\"border-top py-4 mt-auto\">\n      <div class=\"container\">\n        <div class=\"row\">\n          <div class=\"col-md-12 text-center\">\n            <p class=\"mb-0 small text-muted\">&copy; 2025 我的个人博客. All rights reserved.</p>\n          </div>\n        </div>\n      </div>\n    </footer>\n  </div>\n</template>\n\n<script>\nimport axios from 'axios'\n\nexport default {\n  name: 'App',\n  data() {\n    return {\n      showCreateForm: false,\n      loading: true,\n      posts: [],\n      newPost: {\n        title: '',\n        content: '',\n        author: ''\n      }\n    }\n  },\n  mounted() {\n    this.loadPosts()\n  },\n  methods: {\n    async loadPosts() {\n      try {\n        const response = await axios.get('/api/posts')\n        this.posts = response.data\n        this.loading = false\n      } catch (error) {\n        console.error('加载文章失败:', error)\n        this.loading = false\n      }\n    },\n    async createPost() {\n      try {\n        // 验证输入\n        if (!this.newPost.title.trim()) {\n          alert('请输入文章标题')\n          return\n        }\n        if (!this.newPost.author.trim()) {\n          alert('请输入作者姓名')\n          return\n        }\n        if (!this.newPost.content.trim()) {\n          alert('请输入文章内容')\n          return\n        }\n        \n        await axios.post('/api/posts', this.newPost)\n        // 重置表单\n        this.newPost = { title: '', content: '', author: '' }\n        this.showCreateForm = false\n        // 重新加载文章列表\n        this.loadPosts()\n        \n        // 显示成功消息\n        alert('文章发布成功！')\n      } catch (error) {\n        console.error('发布文章失败:', error)\n        alert('发布文章失败，请重试')\n      }\n    },\n    formatDate(dateString) {\n      const date = new Date(dateString)\n      return date.toLocaleDateString('zh-CN') + ' ' + date.toLocaleTimeString('zh-CN', {\n        hour12: false,\n        hour: '2-digit',\n        minute: '2-digit'\n      })\n    },\n    truncateContent(content, maxLength) {\n      if (!content) return ''\n      if (content.length <= maxLength) return content\n      return content.substring(0, maxLength) + '...'\n    },\n    viewFullPost(post) {\n      // 显示完整文章的模态框或新页面\n      const fullContent = `文章标题: ${post.title}\n作者: ${post.author}\n发布时间: ${this.formatDate(post.createdTime)}\n\n${post.content}`\n      alert(fullContent)\n    }\n  }\n}\n</script>\n\n<style>\n#app {\n  min-height: 100vh;\n  display: flex;\n  flex-direction: column;\n}\n\n.blog-header {\n  background-color: #fff;\n}\n\n.card {\n  border: 1px solid #e1e5e9;\n  transition: box-shadow 0.2s ease;\n}\n\n.card:hover {\n  box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);\n}\n\n.card-title {\n  color: #212529;\n  font-weight: 600;\n}\n\nfooter {\n  background-color: #f8f9fa;\n  margin-top: auto;\n}\n\n.btn {\n  border-radius: 0.25rem;\n}\n\n.form-control:focus {\n  border-color: #86b7fe;\n  box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);\n}\n</style>"],"mappings":"AA8HA,OAAOA,KAAI,MAAO,OAAM;AAExB,eAAe;EACbC,IAAI,EAAE,KAAK;EACXC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,cAAc,EAAE,KAAK;MACrBC,OAAO,EAAE,IAAI;MACbC,KAAK,EAAE,EAAE;MACTC,OAAO,EAAE;QACPC,KAAK,EAAE,EAAE;QACTC,OAAO,EAAE,EAAE;QACXC,MAAM,EAAE;MACV;IACF;EACF,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,IAAI,CAACC,SAAS,CAAC;EACjB,CAAC;EACDC,OAAO,EAAE;IACP,MAAMD,SAASA,CAAA,EAAG;MAChB,IAAI;QACF,MAAME,QAAO,GAAI,MAAMb,KAAK,CAACc,GAAG,CAAC,YAAY;QAC7C,IAAI,CAACT,KAAI,GAAIQ,QAAQ,CAACX,IAAG;QACzB,IAAI,CAACE,OAAM,GAAI,KAAI;MACrB,EAAE,OAAOW,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,SAAS,EAAEA,KAAK;QAC9B,IAAI,CAACX,OAAM,GAAI,KAAI;MACrB;IACF,CAAC;IACD,MAAMa,UAAUA,CAAA,EAAG;MACjB,IAAI;QACF;QACA,IAAI,CAAC,IAAI,CAACX,OAAO,CAACC,KAAK,CAACW,IAAI,CAAC,CAAC,EAAE;UAC9BC,KAAK,CAAC,SAAS;UACf;QACF;QACA,IAAI,CAAC,IAAI,CAACb,OAAO,CAACG,MAAM,CAACS,IAAI,CAAC,CAAC,EAAE;UAC/BC,KAAK,CAAC,SAAS;UACf;QACF;QACA,IAAI,CAAC,IAAI,CAACb,OAAO,CAACE,OAAO,CAACU,IAAI,CAAC,CAAC,EAAE;UAChCC,KAAK,CAAC,SAAS;UACf;QACF;QAEA,MAAMnB,KAAK,CAACoB,IAAI,CAAC,YAAY,EAAE,IAAI,CAACd,OAAO;QAC3C;QACA,IAAI,CAACA,OAAM,GAAI;UAAEC,KAAK,EAAE,EAAE;UAAEC,OAAO,EAAE,EAAE;UAAEC,MAAM,EAAE;QAAG;QACpD,IAAI,CAACN,cAAa,GAAI,KAAI;QAC1B;QACA,IAAI,CAACQ,SAAS,CAAC;;QAEf;QACAQ,KAAK,CAAC,SAAS;MACjB,EAAE,OAAOJ,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,SAAS,EAAEA,KAAK;QAC9BI,KAAK,CAAC,YAAY;MACpB;IACF,CAAC;IACDE,UAAUA,CAACC,UAAU,EAAE;MACrB,MAAMC,IAAG,GAAI,IAAIC,IAAI,CAACF,UAAU;MAChC,OAAOC,IAAI,CAACE,kBAAkB,CAAC,OAAO,IAAI,GAAE,GAAIF,IAAI,CAACG,kBAAkB,CAAC,OAAO,EAAE;QAC/EC,MAAM,EAAE,KAAK;QACbC,IAAI,EAAE,SAAS;QACfC,MAAM,EAAE;MACV,CAAC;IACH,CAAC;IACDC,eAAeA,CAACtB,OAAO,EAAEuB,SAAS,EAAE;MAClC,IAAI,CAACvB,OAAO,EAAE,OAAO,EAAC;MACtB,IAAIA,OAAO,CAACwB,MAAK,IAAKD,SAAS,EAAE,OAAOvB,OAAM;MAC9C,OAAOA,OAAO,CAACyB,SAAS,CAAC,CAAC,EAAEF,SAAS,IAAI,KAAI;IAC/C,CAAC;IACDG,YAAYA,CAACd,IAAI,EAAE;MACjB;MACA,MAAMe,WAAU,GAAI,SAASf,IAAI,CAACb,KAAK;AAC7C,MAAMa,IAAI,CAACX,MAAM;AACjB,QAAQ,IAAI,